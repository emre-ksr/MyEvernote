@model IEnumerable<MyEvernote.Entities.Note>

@{
    ViewBag.Title = "Notlar";
}
 
 
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <p>
            @Bootstrap.LinkButton("/Note/Create","success","","Create","plus","Create")
        </p>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Category.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Text)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsDraft)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LikeCount)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDraft)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LikeCount)
                    </td>
                    <td>

                        @Bootstrap.LinkButton("/Note/Edit/" + item.Id, "warning", "btn-xs", "Edit", "edit", string.Empty)
                        @Bootstrap.LinkButton("/Note/Details/" + item.Id, "info", "btn-xs", "Details", "search", string.Empty)
                        @Bootstrap.LinkButton("/Note/Delete/" + item.Id, "danger", "btn-xs", "Delete", "trash", string.Empty)
                    </td>
                </tr>
            }

        </table>

    </div>
</div>
